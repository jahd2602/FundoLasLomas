{% extends app.request.xmlHttpRequest ? "UpaoFundoBundle:Layout:modal.html.twig" :  "UpaoFundoBundle:Layout:base.html.twig" %}

{% block body %}

    <form {% block enctype %}{{ form_enctype(form) }}{% endblock %}
            class="form-horizontal form-accion"
            action="{% block action %}{{ path('planta_sembrar') }}{% endblock %}"
            method="post" role="form">

        <div class="modal-header">
            <h4 class="modal-title">{% block title %}Sembrar{% endblock %}</h4>
        </div>

        <div class="modal-body">

            <div data-alerts="alerts"></div>
            {% block content %}
                {{ form_errors(form) }}
                {{ form_rest(form) }}
            {% endblock %}


        </div>

        <div class="modal-footer">

            {% block buttons %}
                <a class="btn btn-default btn-modal" rel="modal:close" href="{{ path('tipoplanta_new') }}">Nueva Planta</a>
                <a class="btn btn-default btn-modal" rel="modal:close" href="{{ path('proveedor_new') }}">Nuevo Proveedor</a>
                <button type="submit" class="btn btn-primary">Registrar Siembra</button>
            {% endblock %}
        </div>

    </form>
{% endblock %}


{% block javascript %}

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>


{% endblock %}