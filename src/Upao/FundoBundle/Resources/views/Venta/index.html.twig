{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Venta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Kilosvendidos</th>
                <th>Observaciones</th>
                <th>Costo</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('venta_show', { 'id': entity.id }) }}">{{ entity.kilosVendidos }}</a></td>
                <td>{{ entity.observaciones }}</td>
                <td>{{ entity.costo }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('venta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('venta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('venta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
