{% extends app.request.xmlHttpRequest ? "UpaoFundoBundle:Layout:modal.html.twig" :  "UpaoFundoBundle:Layout:base.html.twig" %}

{% block body %}

    <form {% block enctype %}{{ form_enctype(edit_form) }}{% endblock %}
            class="form-horizontal form-accion"
            action="{% block action %}{{ path('empleado_update',{'id':entity.id}) }}{% endblock %}"
            method="{% block method %}put{% endblock %}" role="form">

        <div class="modal-header">
            <h4 class="modal-title">{% block title %}Empleado{% endblock %}</h4>
        </div>

        <div class="modal-body">

            <div data-alerts="alerts"></div>
            {% block content %}
                {{ form_errors(edit_form) }}
                {{ form_rest(edit_form) }}
            {% endblock %}


        </div>

        <div class="modal-footer">

            {% block buttons %}
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            {% endblock %}
        </div>

    </form>
{% endblock %}


{% block javascript %}

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>


{% endblock %}

